<h1>Books</h1>



<table class="is_border">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<h2>New book</h2>

<div class="error-text">
  <% if @book.errors.any? %>
    <%= pluralize(@book.errors.count, "error has") %> occurred.
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="form">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <div class="form">
    <p><%= f.submit 'Create Book', class: "form-link" %></p>
  </div>

<% end %>
