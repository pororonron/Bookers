<h1>Editing Book</h1>

<div class="error-text">
  <% if @book.errors.any? %>
    <%= pluralize(@book.errors.count, "error has") %> occurred.
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>


<%= form_with model: @book do |f| %>

  <div class="form">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <div class="form">
    <p><%= f.submit 'Update Book', class: "form-link" %></p>
  </div>

<% end %>

<div class="form">
  <div class="wrap">
    <span class="link-1"><%= link_to "Show", book_path(@book.id) %></span>
    <span class="link-2"><%= link_to "Back", books_path %></span>
  </div>
</div>